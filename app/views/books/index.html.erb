<div class="container">
  <div class="row">
    <%= render partial: 'layouts/error_messages', locals: {book: @book } %>
    <div class="render col-md-3">
      <%= render partial: 'layouts/left_partial', locals: { user: @user, book: @book_new } %>
    </div>

    <div class="main col-md-8 offset-md-1">
      <div class="header">Books</div>
      <table>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td><%= link_to "#{book.title}", book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>















