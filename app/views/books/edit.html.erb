<h1>Editing Book</h1>

<%= render partial: 'layouts/error_messages', locals: {book: @book} %>

<%= form_with model:@book, url:book_path(@book), local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
<p>|</p>
<%= link_to "Back", books_path %>