<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <h1 class="header">Editing Book</h1>

      <%= render partial: 'layouts/error_messages', locals: {book: @book} %>

      <%= form_with model:@book, url:book_path(@book), local:true do |f| %>
        <div class="form-group">
          <rabel class="d-block">Title</label>
          <%= f.text_field :title ,class: "d-block w-75" %>
        </div>
        <div class="form-group">
          <rabel class="d-block">Opinion</rabel>
          <%= f.text_area :body ,class: "d-block w-75" %>
        </div>

        <%= f.submit 'Update Book', class: "btn btn-success d-block" %>
      <% end %>

      <%= link_to "Show", book_path(@book.id), class: "d-inline" %>
      <p class="d-inline">|</p>
      <%= link_to "Back", books_path, class: "d-inline" %>




    </div>
  </div>
</div>





