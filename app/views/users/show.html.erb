<div class="header">Books</div>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td> <%= attachment_image_tag book.user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %> </td>
      <td> <%= link_to"#{book.title}", book_path(book.id) %> </td>
      <td> <%= book.opinion %> </td>

      <% end %>
    </tr>
  </tbody>
</table>

<%= render partial: 'layouts/left_partial', locals: { user: @user, book: @book } %>