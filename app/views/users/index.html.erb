<div class="container">
  <div class="row">

    <div class="render col-md-3">
      <%= render partial: 'layouts/left_partial', locals: { user: @user, book: @book } %>
    </div>

    <div class="main col-md-8 offset-md-1">
      <h2 class="header">Users</h2>

        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          </tbody>
          <% end %>
        </table>

    </div>

  </div>
</div>





