<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="header">User info</h2>

            <%= render partial: 'layouts/error_messages', locals: {book: @user} %>

            <%= form_with model: @user, local:true do |f| %>
                <div class="form-group">
                    <label class="d-block">Name</label>
                    <%= f.text_field :name, class: "d-block w-100" %>
                </div>

                <div class="form-group">
                    <label class="d-block">Image</label>
                    <%= f.attachment_field :profile_image, class: "d-block w-100" %>
                </div>

                <div class="form-group">
                    <label class="d-block">Introduction</label>
                    <%= f.text_area :introduction, class: "d-block w-100" %>
                </div>

                <%= f.submit "Update User" , class: "btn btn-secondary" %>
            <% end %>

        </div>
    </div>
</div>


