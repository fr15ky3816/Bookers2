<h2 class="header">User info</h2>
<table class="table">
  <tr>
    <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></td>
    <td></td>
  </tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>

<%= link_to edit_user_path(user.id) do %>
  <i class="fas fa-user-cog btn btn-outline-secondary btn-block"></i>
<% end %>


<h2 class="header">New book</h2>


<%= form_with model: book, local:true do |f| %>

  <div class="form-group">
    <rabel class="d-block">Title</rabel>
    <%= f.text_field :title, class: "w-100" %>
  </div>
  <div class="form-group">
    <rabel class="d-block">opinion</rabel>
    <%= f.text_area :body, class: "w-100" %>
  </div>
  <%= f.submit 'Create Book', class:"btn btn-success" %>
<% end %>
